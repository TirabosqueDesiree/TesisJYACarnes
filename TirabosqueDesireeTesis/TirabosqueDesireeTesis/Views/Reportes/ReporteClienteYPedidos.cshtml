
@{
                /**/

                ViewBag.Title = "ReporteClienteYPedidos";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TirabosqueDesireeTesis.Models.VMClientePedidoReporte

<div class="container" style="margin-top:100px; padding-top: 50px">

    <h2><b>Reporte: Listado Mensual de Pedidos por cliente.</b></h2>
    <div class="row">
        <div class="col-md-10">
            @using (Html.BeginForm("DescargarReporteXCliente", "Reportes", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Filtre su reporte segun un cliente: </h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group col-md-10">
                        <label>Cliente</label>
                        @Html.DropDownListFor(x => x.IdUsuario, new SelectList(Model.ListaUsuarios, "IdUsuario", "Nombre"), htmlAttributes: new { @class = "form-control" })
                    </div>

                    <div class="form-group col-md-10">
                        <div class="">
                            <input type="submit" value="Descargar reporte en PDF" class="btn btn-primary" />

                        </div>
                    </div>


                </div>
            }

        </div>
    </div>
   
</div>

