
@{
    ViewBag.Title = "ReporteGraficoTotal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px; padding-top: 50px">
    <h2>Reporte: Gráfico mensual de Montos pedidos por clientes</h2>

    <br />
    <button class="btn btn-primary" onclick="Descargar()">
        <i class="glyphicon glyphicon-download"></i> Descargar Reporte
    </button>

    <button class="btn btn-success" onclick="Mostrar()">
        <i class="glyphicon glyphicon-eye-open"></i> Mostrar Reporte
    </button>

    <hr />

    <iframe id="frmEmpleado" width="100%" height="550px" frameborder="0" scrolling="no"></iframe>

</div>
@section scripts{
    <script>
        function Descargar() {


            window.open("/Reportes/DescargarGraficoTotal2");
        }

        function Mostrar() {

            $("#frmEmpleado")
                .attr("src", "/Reportes/DescargarGraficoTotal2")
                .load();
        }

    </script>

}



