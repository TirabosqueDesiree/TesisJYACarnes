
@{
    ViewBag.Title = "ReporteListaPedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TirabosqueDesireeTesis.Models.VMPedidoXEstado

<div class="container" style="margin-top:100px; padding-top: 50px">
    <h2><b>Reporte Listado de Pedidos según un estado.</b></h2>

    @using (Html.BeginForm("DescargarReporteLista", "Reportes", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Filtre su reporte segun un estado: </h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.IdEstado, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IdEstado", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IdEstado, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="descargarButton" value="Descargar en PDF" class="btn btn-primary" />

                </div>
                @*<div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="actualizarButton" value="ActualizarLista" class="btn btn-primary" />

                </div>*@
            </div>


        </div>
    }



