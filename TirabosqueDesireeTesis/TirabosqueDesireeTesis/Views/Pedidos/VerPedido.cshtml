@model List<TirabosqueDesireeTesis.Models.DTODetallePed>
@{
    ViewBag.Title = "VerPedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px; padding-top: 50px">
    <h2>Mis Pedidos</h2>

    <table class="table">
        <tr>
            <th>
                N° PEDIDO
            </th>
            <th>
                FECHA
            </th>
            <th>
                PRODUCTO
            </th>
            <th>
                MARCA
            </th>
            <th>
                PRECIO
            </th>
            <th>
                CANTIDAD
            </th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPedido)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Fecha)*@
                @item.Fecha.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                $
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>

        </tr>
        }

    </table>
    @Html.ActionLink("Regresar", "MisPedidos", new { }, new { @class = "btn btn-success" })
    <hr />

</div>

