@model TirabosqueDesireeTesis.Models.Marca

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:100px; padding-top: 50px">
    <h2>Eliminar</h2>

    <h3>¿Esta seguro de eliminar esta marca?</h3>
    <div>


        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Categoria.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Categoria.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

        </dl>

