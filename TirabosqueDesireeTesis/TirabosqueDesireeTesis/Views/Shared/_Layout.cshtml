    <script src="~/Content/templatePrinc/assets/vendor/jquery/jquery.min.js"></script>

    <script src="~/Content/templatePrinc/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="~/Content/templatePrinc/assets/vendor/jquery.easing/jquery.easing.min.js"></script>


    <script src="~/Content/templatePrinc/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/templatePrinc/assets/vendor/owl.carousel/owl.carousel.min.js"></script>

    <script src="~/Content/templatePrinc/assets/vendor/waypoints/jquery.waypoints.min.js"></script>

    <script src="~/Content/templatePrinc/assets/vendor/counterup/counterup.min.js"></script>


    <script src="~/Content/templatePrinc/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <script src="~/Content/templatePrinc/assets/vendor/venobox/venobox.min.js"></script>

    <script src="~/Content/templatePrinc/assets/vendor/aos/aos.js"></script>


    <script src="~/Content/js/all.js"></script>
    <!-- Template Main JS File -->
    <script src="~/Content/templatePrinc/assets/js/main.js"></script>
    <!-- ver -->

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    @RenderSection("scripts", required: false)
</body>

</html>