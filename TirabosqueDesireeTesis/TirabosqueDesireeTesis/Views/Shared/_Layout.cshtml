<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>J&A Carnes SA</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="~/Content/templatePrinc/assets/css/style.css" rel="stylesheet" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/Content/templatePrinc/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/templatePrinc/assets/vendor/icofont/icofont.min.css" rel="stylesheet" />
    <link href="~/Content/templatePrinc/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="~/Content/templatePrinc/assets/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/templatePrinc/assets/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="~/Content/templatePrinc/assets/vendor/venobox/venobox.css" rel="stylesheet" />
    <link href="~/Content/templatePrinc/assets/vendor/aos/aos.css" rel="stylesheet" />
    <link href="~/Content/templatePrinc/assets/css/style.css" rel="stylesheet" />

    <script src="~/Content/fontawesome-free-5.15.3-web/js/all.min.js"></script>
    <script src="~/Content/fontawesome-free-5.15.3-web/js/fontawesome.min.js"></script>

    <link href="~/Content/fontawesome-free-5.15.3-web/css/fontawesome.css" rel="stylesheet" />
    <!--ver-->

    @Styles.Render("~/Content/css")

    <!-- =======================================================


    ======================================================== -->

    <style>
        .posicion {
            margin: 4px;
        }

        .tam1 {
            font-size: 20px;
        }
