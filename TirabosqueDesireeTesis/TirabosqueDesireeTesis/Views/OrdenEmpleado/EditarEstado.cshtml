
@{
    ViewBag.Title = "EstadoPedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TirabosqueDesireeTesis.Models.Estado

<div class="container" style="margin-top:100px; padding-top: 50px">

   
    <div style="background-color:coral">@ViewBag.Mensage</div>

    <h3>Editar estado del pedido N°: @ViewBag.Pedido</h3>
    @using (Html.BeginForm("EditarEstado", "OrdenEmpleado", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <hr />
            <div class="row">
                <div class="col-md-6">

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdEstado, "Estado", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IdEstado", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdEstado, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Cambiar Estado" class="btn btn-warning" />
                            @Html.ActionLink("Ir a listado Pedidos", "ListaPedidos", "OrdenEmpleado", new { }, new { @class = "btn btn-success" })

                        </div>
                    </div>
                </div>
            </div>





        </div>
    }
</div>