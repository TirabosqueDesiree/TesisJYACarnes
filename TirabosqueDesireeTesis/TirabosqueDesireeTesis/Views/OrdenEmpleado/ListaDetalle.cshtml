
@{
    ViewBag.Title = "ListaDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@model List<TirabosqueDesireeTesis.Models.DTOPedidoDetalle>
<div class="container" style="margin-top:100px; padding-top: 50px">

    <h2>Pedido:</h2>

    <table class="table">
        <tr>
            <th>
                N° Pedido
            </th>
            <th>
                Fecha
            </th>

            <th>
                Producto
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio
            </th>
            <th>

            </th>
            <th>
                Estado
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPedido)
                </td>
                <td>
                    @item.Fecha.ToString("dd/MM/yyyy")
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Producto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    $
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => item.IdEstado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>

            </tr>
        }

    </table>

    @Html.ActionLink("Editar Estado de Pedido", "EditarEstado", new { }, new { @class = "btn btn-warning" }) |
    @Html.ActionLink("Regresar", "ListaPedidos", new { }, new { @class = "btn btn-success" })
</div>