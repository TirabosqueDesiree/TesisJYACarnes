@model IEnumerable<TirabosqueDesireeTesis.Models.Producto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:100px; padding-top: 50px">
    <h2>Listado de productos</h2>

    <p>
        @Html.ActionLink("Crear nuevo", "Create", new { }, new { @class="btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categoria.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Categoria.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    $
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@Url.Content(item.Imagen)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdProducto }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdProducto }, new { @class = "btn btn-info"}) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdProducto },new{ @class = "btn btn-danger"})
                </td>
            </tr>
        }

    </table>
</div>