
@{
    ViewBag.Title = "VerPollos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<TirabosqueDesireeTesis.Models.DTOProdListado>


<div class="container" style="margin-top:50px; padding-top: 50px">
    <div class="row">
        
        <div class="col-md-8" style="font-size:20px; color:red">

            @if (Session["User"] == null)
            {
                <p>Si desea realizar un pedido debe estar REGISTRADO e <b>"Iniciar Sesión"</b> previamente</p>

            }
        </div>
        <div class="col-md-6">

        </div>
    </div>

   
    <br />
    <h2>Pollos</h2>
    <br />

    <table class="table">
        <tr>
            <th>
                Producto
            </th>

            <th>
                Marca
            </th>
            <th>
                Precio
            </th>
            <th>
                Imagen
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td>
                    $
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>

                <td>
                    @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@Url.Content(item.Imagen)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                    }

                </td>

            </tr>
        }

    </table>

</div>