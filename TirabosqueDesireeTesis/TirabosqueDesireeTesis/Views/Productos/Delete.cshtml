@model TirabosqueDesireeTesis.Models.Producto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px; padding-top: 50px">
    <h2>Eliminar Producto</h2>

    <h3>¿Esta seguro de eliminar este producto?</h3>
    <div>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Categoria.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Categoria.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Marca.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Marca.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Precio)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Precio)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Imagen)
            </dt>

            <dd>
                @if (!string.IsNullOrEmpty(Model.Imagen))
                {
                    <img src="@Url.Content(Model.Imagen)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                }
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Observacion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Observacion)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                @Html.ActionLink("Listado Productos", "Index", new { }, new { @class = "btn btn-success" })
            </div>
        }
    </div>
</div>