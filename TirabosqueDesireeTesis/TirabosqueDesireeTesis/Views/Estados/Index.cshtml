@model IEnumerable<TirabosqueDesireeTesis.Models.Estado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px; padding-top: 50px">
    <h2>Estados de Pedidos</h2>

    <p>
        @Html.ActionLink("Crear Estado", "Create", new { }, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Acciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdEstado }, new { @class="btn btn-warning"}) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.IdEstado }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdEstado }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>